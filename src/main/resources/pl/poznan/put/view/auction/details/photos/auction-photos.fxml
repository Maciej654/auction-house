<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?><?import javafx.scene.control.Button?><?import javafx.scene.control.Label?><?import javafx.scene.image.Image?><?import javafx.scene.image.ImageView?><?import javafx.scene.layout.BorderPane?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" minHeight="-Infinity" minWidth="-Infinity"
    xmlns="http://javafx.com/javafx/11.0.1"
    fx:controller="pl.poznan.put.controller.auction.details.photos.AuctionPhotosController">
    <center>
        <ImageView BorderPane.alignment="CENTER" fitHeight="500.0" fitWidth="500.0" pickOnBounds="true"
            preserveRatio="true" fx:id="currentImageView">
            <Image url="@../../../../stuffed-hippo.jpg" />
        </ImageView>
    </center>
    <bottom>
        <Label BorderPane.alignment="CENTER" text="1/1" fx:id="indexLabel" />
    </bottom>
    <opaqueInsets>
        <Insets />
    </opaqueInsets>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <left>
        <Button BorderPane.alignment="CENTER" mnemonicParsing="false" onMouseClicked="#prevButtonClick" text="&lt;"
            fx:id="prevButton">
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </Button>
    </left>
    <right>
        <Button BorderPane.alignment="CENTER" mnemonicParsing="false" onMouseClicked="#nextButtonClick" text="&gt;"
            fx:id="nextButton">
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </Button>
    </right>
</BorderPane>
